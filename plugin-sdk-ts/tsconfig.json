{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": [],
    "types": ["@extism/js-pdk"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": true
  },
  "include": ["src/**/*.ts", "cognia.d.ts"]
}
